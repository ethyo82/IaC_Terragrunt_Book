 # .gitignore 파일 생성
cat > .gitignore << 'EOF'
# Terraform
**/.terraform/
**/*.tfstate
**/*.tfstate.*
**/.terraform.lock.hcl

# Terragrunt
**/.terragrunt-cache/

# AWS credentials
.aws/
credentials
*.pem

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Logs
*.log

# Environment variables
.env
*.env

# Backup files
*.backup
*.bak
EOF